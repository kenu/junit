<project name="junit" default="build">
    <description>
            build test
    </description>

    <!-- ================================= 
          target: build              
         ================================= -->
    <target name="build" depends="init" description="build test">
        <mkdir dir="/tmp/build"/>
    	<javac srcdir="src"
         destdir="/tmp/build"
         classpath="jarfile"
         debug="on"
	/>
    </target>

    <!-- - - - - - - - - - - - - - - - - - 
          target: init                      
         - - - - - - - - - - - - - - - - - -->
    <target name="init">
    	<delete dir="/tmp/build"></delete>
    </target>

</project>
